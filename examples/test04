! This is a comment
program HelloWorld;
var    x: integer;
var    y: integer;
var    z: integer;
var    i: integer;
var   j: boolean;
begin
    x := 2*(42-2);
    y := 3;
    i := 2;
    j := 1;
    z := true;
    if j then
        y := 5
    else
        y := x - 5;
    while i > 0 do
        x := x + y * z;
        i := i - 1;
end.